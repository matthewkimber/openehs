@model OpenEhs.Web.Models.LocationReportViewModel
@{
    ViewBag.Title = "Location Report";
}
@section head
{
    <script src="@Url.Content("~/Scripts/jquery.ui.datepicker-en-GB.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#SelectedDate").datepicker();
        });
    </script>
}
<h2>Location Report</h2>
<br />
@using (Html.BeginForm())
{    
    <p>
    Select a Date 
    @Html.EditorFor(m => m.SelectedDate)
    <input type="submit" value="Create Report" />
    </p>
    <br />
}

@Html.ActionLink("Back to Reports", "Index")
@if (Model.Data != null)
{
<table>
    <thead>
        <tr>
            <th class="Location">
                Location
            </th>
            <th class="PatientsServed">
                Patients Served
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRowView record in Model.Data)
        {
        <tr>
            <td class="Location">
                @String.Format("{0}", record[0].ToString())
            </td>
            <td class="PatientsServed" align="center">
                @String.Format("{0}", record[1].ToString())
            </td>
        </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Back to Reports", "Index")
}

