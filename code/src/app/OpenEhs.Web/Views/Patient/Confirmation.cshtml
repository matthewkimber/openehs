@model OpenEhs.Domain.Patient
@{
    ViewBag.Title = "Successfully created patient";
}
@section head 
{
    <script src="@Url.Content("~/Scripts/PrintLabelCreate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/DYMO.Label.Framework.1.0.beta.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $("#patientDetailsButton").button().click(function () {
                window.location = '/Patient/Details/' + $('#patientId').val();
            });

            $("#printButton").button().click(function () {
                //TODO Implement print barcode functionality here
            });
        });
    </script>
    <style type="text/css">
        #confirmation
        {
            margin: 50px auto 0px auto;
            width: 700px;
            border: solid 1px #CCCCCC;
            padding: 20px;
            -moz-border-radius: 10px 10px 10px 10px;
            -moz-box-shadow: 0 0 20px #CCCCCC;
        }
        
        .optionButton
        {
            font-size: 18px;
            width: 225px;
            margin-left: 20px;
        }
        #headerText
        {
            text-align: center;
            margin-bottom: 25px;
        }
        
        #options
        {
            margin-bottom: 10px;
        }
    </style>
}
<div id="confirmation">
    @if (Model.MiddleName != "")
    {
        <h3 id="headerText">
            Successfully created patient record for <i>@Model.FirstName @Model.MiddleName @Model.LastName</i>
        </h3>
    }
    else
    {
        <h3 id="headerText">
            Successfully created patient record for <i>@Model.FirstName @Model.LastName</i>
        </h3>
    }
    <div>
        <h3 id="options">
            Options:
        </h3>
        <div>
            <input type="hidden" id="patientId" value="@Model.Id"/>
            <input type="hidden" id="patientFName" value="@Model.FirstName"/>
            <input type="hidden" id="patientLName" value="@Model.LastName"/>
            <button type="button" class="optionButton" id="printButton">
                Print Patient Barcode</button>
            @* TODO Implement if statement to check if user has rights to even go to patient details *@
            <input type="button" class="optionButton" id="patientDetailsButton" value="Go to Patient Details" />
        </div>
    </div>
</div>
