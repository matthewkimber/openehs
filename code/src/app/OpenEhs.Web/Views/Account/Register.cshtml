@model OpenEhs.Web.Models.RegisterModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <title>OpenEHS - User Registration</title>

        <link href="@Url.Content("~/Content/membership/registration.css")" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <div id="container">
            <div id="logo">
                <img src="@Url.Content("~/images/openehs.logo.big.png")" alt="OpenEHS" />
            </div>
            <h2>Register</h2>
            <div id="registration" class="group">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @id = "registrationForm" }))
                {
                    <div>
                         @Html.ValidationSummary(false)
                    </div>
                    <div id="basicInformation" class="step">
                        <h3>Basic Information</h3>
                        <ul>
                            <li>
                                @Html.LabelFor(m => m.FirstName)
                                @Html.TextBoxFor(m => m.FirstName, new { @id = "firstNameTextbox" })
                            </li>
                            <li>
                                @Html.LabelFor(m => m.MiddleName)
                                @Html.TextBoxFor(m => m.MiddleName, new { @id = "middleNameTextbox" })
                            </li>
                            <li>
                                @Html.LabelFor(m => m.LastName)
                                @Html.TextBoxFor(m => m.LastName, new { @id = "lastNameTextbox" })
                            </li>
                            <li>
                                @Html.LabelFor(m => m.Title)
                                @Html.DropDownListFor(m => m.Title, Model.StaffTypes, new { @id = "titleDropdown" })
                            </li>
                            <li>
                                @Html.LabelFor(m => m.LicenseNumber)
                                @Html.TextBoxFor(m => m.LicenseNumber, new { @id = "licenseNumberTextbox", @maxlength = "20" })
                            </li>
                        </ul>
                    </div>
                    <div id="contactInformation" class="step">
                        <h3>Contact Information</h3>
                        <ul>
                            <li>
                                @Html.LabelFor(m => m.PhoneNumber)
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @id = "phoneNumberTextBox" })
                            </li>
                            <li>
                                @Html.LabelFor(m => m.Email)
                                @Html.TextBoxFor(m => m.Email, new { @id = "emailAddressTextBox" })
                            </li>
                        </ul>
                        <fieldset>
                            <legend>Address</legend>
                            <ul>
                                <li>
                                    @Html.LabelFor(m => m.Street1)
                                    @Html.TextBoxFor(m => m.Street1, new { @id = "street1Textbox" })
                                </li>
                                <li>
                                    @Html.LabelFor(m => m.Street2)
                                    @Html.TextBoxFor(m => m.Street2, new { @id = "street2Textbox" })
                                </li>
                                <li>
                                    @Html.LabelFor(m => m.City)
                                    @Html.TextBoxFor(m => m.City, new { @id = "cityTextbox" })
                                </li>
                                <li>
                                    @Html.LabelFor(m => m.Region)
                                    @Html.DropDownListFor(m => m.Region, Model.Regions)
                                </li>
                                <li>
                                    @Html.LabelFor(m => m.Country)
                                    @Html.DropDownListFor(m => m.Country, Model.Countries)
                                </li>
                            </ul>
                        </fieldset>
                    </div>
                    <div id="credentialsInformation" class="step">
                        <h3>User Credentials</h3>
                        <ul>
                            <li>
                                <label>Username</label>
                                <div id="generatedUsername">generated.username.here</div>
                                @Html.HiddenFor(m => m.Username)
                            </li>
                            <li>
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @id = "passwordTextbox" })
                                <p>Passwords must be at least @ViewBag.PasswordLength characters in length.</p>
                            </li>
                            <li>
                                @Html.LabelFor(m => m.ConfirmPassword)
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "confirmPasswordTextbox" })
                            </li>
                        </ul>
                    </div>
                    <div id="registrationNavigation">
                        <input class="navigation_button" id="back" value="Back" type="reset" />
                        <input class="navigation_button" id="next" value="Next" type="submit" />
                    </div>
                }
            </div>
        </div>

        <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bbq.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.5.custom.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.form.wizard-3.0.4.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/membership/registration.js")" type="text/javascript"></script>
    </body>
</html>